<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <TextView
        android:id="@+id/text_assessment_edit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_input_margin"
        android:layout_marginEnd="@dimen/text_input_margin_large"
        android:text="Title"
        app:layout_constraintEnd_toStartOf="@+id/edit_assessment_edit_title"
        app:layout_constraintTop_toTopOf="@+id/edit_assessment_edit_title" />

    <EditText
        android:id="@+id/edit_assessment_edit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/edit_input_vertical"
        android:layout_marginEnd="@dimen/edit_input_large"
        android:ems="10"
        android:hint="Assessment title"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_assessment_edit_scheduled_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_input_margin"
        android:layout_marginEnd="@dimen/text_input_margin_large"
        android:text="Scheduled Date"
        app:layout_constraintEnd_toStartOf="@id/edit_assessment_edit_scheduled_date"
        app:layout_constraintTop_toTopOf="@id/edit_assessment_edit_scheduled_date" />

    <EditText
        android:id="@+id/edit_assessment_edit_scheduled_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/edit_input_vertical"
        android:layout_marginEnd="@dimen/edit_input_large"
        android:hint="MM/dd/yyyy"
        android:ems="10"
        android:inputType="date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_assessment_edit_title" />


    <TextView
        android:id="@+id/test_assessment_edit_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_input_margin"
        android:layout_marginEnd="@dimen/text_input_margin_large"
        android:text="Notes"
        app:layout_constraintEnd_toStartOf="@+id/edit_assessment_edit_notes"
        app:layout_constraintTop_toTopOf="@+id/edit_assessment_edit_notes" />

    <EditText
        android:id="@+id/edit_assessment_edit_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/edit_input_vertical"
        android:layout_marginEnd="@dimen/edit_input_large"
        android:ems="10"
        android:hint="Assessment Description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_assessment_edit_scheduled_date"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        tools:layout_editor_absoluteX="109dp"
        tools:layout_editor_absoluteY="222dp" />


</androidx.constraintlayout.widget.ConstraintLayout>