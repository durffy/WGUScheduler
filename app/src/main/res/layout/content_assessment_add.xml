<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <EditText
        android:id="@+id/edit_assessment_add_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/edit_input_vertical"
        android:layout_marginEnd="@dimen/edit_input_horizontal"
        android:ems="10"
        android:hint="Assessment title"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_assessment_add_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/edit_input_vertical"
        android:layout_marginEnd="@dimen/edit_input_horizontal"
        android:ems="10"
        android:hint="Assessment Description"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_assessment_add_title" />

    <TextView
        android:id="@+id/text_assessment_add_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_input_margin_vertical"
        android:layout_marginEnd="@dimen/text_input_margin_horizontal"
        android:text="Title"
        app:layout_constraintEnd_toStartOf="@+id/edit_assessment_add_title"
        app:layout_constraintTop_toTopOf="@+id/edit_assessment_add_title" />

    <TextView
        android:id="@+id/test_assessment_add_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_input_margin_vertical"
        android:layout_marginEnd="@dimen/text_input_margin_horizontal"
        android:text="Description"
        app:layout_constraintEnd_toStartOf="@+id/edit_assessment_add_description"
        app:layout_constraintTop_toTopOf="@+id/edit_assessment_add_description" />

    <TextView
        android:id="@+id/text_assessment_add_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_input_margin_vertical"
        android:layout_marginEnd="@dimen/text_input_margin_horizontal"
        android:text="Type"
        app:layout_constraintEnd_toStartOf="@+id/spinner_assessment_add_type"
        app:layout_constraintTop_toTopOf="@+id/spinner_assessment_add_type" />

    <Spinner
        android:id="@+id/spinner_assessment_add_type"
        android:layout_width="210dp"
        android:layout_height="45dp"
        android:layout_marginTop="@dimen/edit_input_vertical"
        android:layout_marginEnd="@dimen/edit_input_horizontal"
        android:autofillHints="Assessment Type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/edit_assessment_add_description"
        app:layout_constraintTop_toBottomOf="@+id/edit_assessment_add_description" />

</androidx.constraintlayout.widget.ConstraintLayout>