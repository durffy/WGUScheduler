<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wguscheduler">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.AssessmentsActivity"
            android:label="@string/title_activity_assessment"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".activities.AssessmentDetailActivity"
            android:label="@string/title_activity_assessment_details"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".activities.CourseDetailsActivity"
            android:label="@string/title_activity_course_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.CoursesActivity"
            android:label="@string/title_activity_courses"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.TermDetailsActivity"
            android:label="@string/title_activity_term_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.TermAddActivity"
            android:label="@string/title_activity_term_add"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.CurrentTermActivity"
            android:label="@string/title_activity_current_term"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.TermsActivity"
            android:label="@string/title_activity_terms"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>